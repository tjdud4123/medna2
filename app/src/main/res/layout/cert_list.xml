<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f3f4f4"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_cert_list_icon"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_cert_none" />

    <LinearLayout
        android:layout_toRightOf="@+id/iv_cert_list_icon"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cert_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:text="titletttttttttsadkjfhasdlfkjhaskldfhasdklfjhasklfjhalksdjfhalksdjfhlaksjdfhalksdjfhaskdjfh"/>
        <TextView
            android:id="@+id/tv_cert_list_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#828790"
            android:text="title"/>

        <TextView
            android:id="@+id/tv_cert_list_expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#828790"
            android:text="title"/>

    </LinearLayout>


</RelativeLayout>